@model List<GameVM>

<div class="container text-center russo-one mt-2" style="color: blanchedalmond;">
    <h2>Все игры</h2>
</div>
<div class="row">
    <div class="col-3">
        <partial name="_AdminPanel" />
    </div>
    <div class="col-9">
        <div class="container text-center russo-one mt-2 w-75">
            @if (Model == null || !Model.Any())
            {
                <h2 style="color: blanchedalmond;">Список игр пуст</h2>
            }
            else
            {
                <div class="container mt-3">
                    <table class="table table-dark my_table text-center">
                        <thead>
                            <tr>
                                <th>Название</th>
                                <th>Цена</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var game in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Game" asp-action="Index" asp-route-Id="@game.Id">@game.Title</a>
                                    </td>
                                    <td>@game.Price р.</td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="Modify" asp-route-Id="@game.Id">Редактировать</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="Remove" asp-route-gameId="@game.Id">Удалить</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>