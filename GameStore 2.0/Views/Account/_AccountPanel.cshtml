<div class="container mt-3 mb-3 w-75 russo-one text-center p-3 border border-3 border-dark rounded-4" style="background-color: #cc2936;">
    <h4 style="color:blanchedalmond">Панель управления</h4>
    <div class="mt-3">
        <a role="button" class="btn btn-dark button1" style="width: 240px !important" asp-controller="Account" asp-action="Orders">Мои заказы</a>
    </div>
    <div class="mt-2">
        <a role="button" class="btn btn-dark button1" style="width: 240px !important" asp-controller="Account" asp-action="ChangeEmail">Сменить почту</a>
    </div>
    <div class="mt-2">
        <a role="button" class="btn btn-dark button1" style="width: 240px !important" asp-controller="Account" asp-action="ChangePassword">Сменить пароль</a>
    </div>
    <div class="mt-2">
        <a role="button" class="btn btn-dark button1" style="width: 240px !important" asp-controller="Account" asp-action="ChangePhone">Изменить номер</a>
    </div>
    <div class="mt-2">
        <a role="button" class="btn btn-dark button1" style="width: 240px !important" asp-controller="Account" asp-action="Logout">Выйти из аккаунта</a>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <div class="mt-2">
            <a role="button" class="btn btn-dark button1" style="width: 240px !important" asp-controller="Admin" asp-action="Index">Панель администратора</a>
        </div>
    }
</div>