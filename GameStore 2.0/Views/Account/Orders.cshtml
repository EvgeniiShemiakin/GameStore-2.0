@model List<OrderVM>

<div class="container text-center russo-one mt-2" style="color: blanchedalmond;">
    <h2>Мои заказы</h2>
</div>
<div class="row">
    <div class="col-3">
        <partial name="_AccountPanel" />
    </div>
    <div class="col-9">
        <div class="container text-center russo-one mt-2 w-75">
            @if (Model == null || !Model.Any())
            {
                <h2 style="color: blanchedalmond;">Список заказов пуст</h2>
            }
            else
            {
                <div class="container mt-3">
                    <table class="table table-dark my_table text-center">
                        <thead>
                            <tr>
                                <th>Время заказа</th>
                                <th>ID заказа</th>
                                <th>Сумма заказа</th>
                                <th>Детали</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderByDescending(x => x.Date))
                            {
                                <tr>
                                    <td>@order.Date</td>
                                    <td>@order.Id</td>
                                    <td>@order.OrderCost</td>
                                    <td><a asp-controller="Account" asp-action="OrderInfo" asp-route-id="@order.Id">Подробнее</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
<div class="container text-center mt-3 mb-4">
    <a role="button" class="btn btn-dark button1" asp-controller="Home" asp-action="Index">На главную</a>
</div>